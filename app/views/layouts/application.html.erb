<!DOCTYPE html>
<html lang="en-us">
  <head>
    <title><%= @title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <header>
        <h1>Our Cookbook</h1>
      </header>
      <section class="content">
        <nav>
          <%=link_to_unless_current 'Home', root_url %>
          <%=link_to_unless_current 'About', about_url %>
          <%=link_to_unless_current 'Contact', contact_url %>
          <%=link_to_unless_current 'Recipes', recipes_url %>
        </nav>
        <% if notice %>
         <div id="notice">
           <%= notice %>
         </div>
        <% end %>
        <%= yield %>
      </section>
      <footer>
        <h4>Copyright <%=Date.today.year %> OurCookbook</h4>
      </footer>
    </div>
  </body>
</html>
